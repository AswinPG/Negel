<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Negel.Subject.SubjectDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    BackgroundColor="#0E153A"
    NavigationPage.HasNavigationBar="False"
    mc:Ignorable="d">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Margin="30"
                FontAttributes="Bold"
                FontSize="28"
                HorizontalOptions="Center"
                Text="SEPM"
                TextColor="White"
                VerticalOptions="Center" />
            <Button
                Margin="20,10,20,10"
                BackgroundColor="#413CA0"
                CornerRadius="10"
                FontFamily="Poppins-Bold.ttf#Poppins-Bold"
                Text="Video Lectures"
                TextColor="White" />
            <Frame
                Margin="20,10,20,10"
                BackgroundColor="#31227A"
                CornerRadius="15">
                <Grid>
                    <ActivityIndicator
                        x:Name="MainIndicator"
                        HeightRequest="70"
                        HorizontalOptions="Center"
                        IsRunning="True"
                        VerticalOptions="Center"
                        Color="White" />
                    <CollectionView
                        x:Name="MainCollectionView"
                        SelectionChanged="MainCollectionView_SelectionChanged"
                        SelectionMode="Single">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid>

                                    <Label
                                        Margin="10"
                                        FontAttributes="Bold"
                                        FontFamily="Poppins-Bold.ttf#Poppins-Bold"
                                        FontSize="22"
                                        HorizontalOptions="Start"
                                        Text="{Binding Heading}"
                                        TextColor="White"
                                        VerticalOptions="Center" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>


            </Frame>
            <Button
                Margin="30,10,30,20"
                BackgroundColor="#413CA0"
                Clicked="TestClicked"
                CornerRadius="10"
                FontFamily="Poppins-Bold.ttf#Poppins-Bold"
                Text="Practice Test"
                TextColor="White"
                VerticalOptions="End" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>